{
	"eslint.useFlatConfig": true,
	"eslint.validate": [
		"javascript",
		"javascriptreact",
		"typescript",
		"typescriptreact",
		"astro"
	],
	"eslint.options": {
		"extensions": [".js", ".jsx", ".ts", ".tsx", ".astro"]
	},
	"editor.codeActionsOnSave": {
		"source.fixAll.eslint": "explicit"
	},
	"[astro]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	}
}
