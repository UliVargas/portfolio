---
// Projects section
import ProjectCard from './ProjectCard.astro';
---

<section id="projects" class="px-3 sm:px-6 pb-16 md:px-16 md:pb-24 relative z-10">
	<!-- Blueprint Grid Background -->
	<div class="absolute inset-0 z-0 bg-blueprint-grid opacity-30 pointer-events-none"></div>

	<!-- Section Title -->
	<div class="flex justify-center items-center mb-16 relative">
		<h2
			class="text-4xl font-display font-black text-center z-10 bg-background-light dark:bg-background-dark px-4 text-gray-900 dark:text-white border-2 border-transparent rounded-lg relative"
		>
			<span class="absolute -inset-1 border border-dashed border-primary/20 -z-10 rounded-lg"
			></span>
			Proyectos
		</h2>
	</div>

	<!-- Projects Container -->
	<div class="flex flex-col gap-16 md:gap-24 max-w-5xl mx-auto">
		<ProjectCard
			title="Próximos Proyectos"
			description="Nuevos desarrollos en camino. Actualmente trabajando en soluciones innovadoras con las últimas tecnologías del ecosistema web moderno."
			category="En Construcción"
			categoryColor="bg-accent-grey"
			accentColor="bg-gray-100 dark:bg-gray-800"
			technologies={[
				{ icon: 'construction', name: 'WIP', color: 'text-yellow-600' },
				{ icon: 'rocket-launch', name: 'Pronto', color: 'text-purple-600' },
				{ icon: 'auto-awesome', name: 'Nuevo', color: 'text-pink-500' },
			]}
			reversed={false}
		/>
	</div>
</section>
