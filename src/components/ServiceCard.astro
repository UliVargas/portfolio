---
// ServiceCard component
interface Props {
    icon: string;
    title: string;
    description: string;
    bgColor?: string;
}

const { icon, title, description, bgColor = 'bg-primary' } = Astro.props;
---

<div class="bg-white dark:bg-surface-dark p-8 rounded-2xl border-2 border-black dark:border-white shadow-neobrutalism hover:shadow-neobrutalism-hover hover:translate-x-[2px] hover:translate-y-[2px] transition-all group relative overflow-hidden">
    <!-- Decorative Corner -->
    <div class="absolute top-0 right-0 w-16 h-16 border-l border-b border-dashed border-gray-300 pointer-events-none"></div>
    
    <!-- Icon -->
    <div class={`w-12 h-12 ${bgColor} rounded-lg border-2 border-black mb-6 flex items-center justify-center group-hover:rotate-6 transition-transform relative z-10`}>
        <span class="material-symbols-outlined text-white">{icon}</span>
    </div>
    
    <!-- Title -->
    <h3 class="text-2xl font-bold font-display mb-3 text-gray-900 dark:text-white relative z-10">
        {title}
    </h3>
    
    <!-- Description -->
    <p class="text-gray-600 dark:text-gray-300 text-sm leading-relaxed font-body relative z-10">
        {description}
    </p>
</div>
