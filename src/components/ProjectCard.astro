---
// ProjectCard component
interface Props {
    title: string;
    description: string;
    category: string;
    categoryColor?: string;
    accentColor?: string;
    technologies: Array<{icon: string, name: string, color: string}>;
    reversed?: boolean;
}

const { 
    title, 
    description, 
    category, 
    categoryColor = 'bg-primary',
    accentColor = 'bg-accent-light-blue dark:bg-slate-800',
    technologies,
    reversed = false 
} = Astro.props;
---

<div class={`group relative flex flex-col ${reversed ? 'md:flex-row-reverse' : 'md:flex-row'} bg-white dark:bg-surface-dark border-[4px] border-black dark:border-white rounded-3xl shadow-neobrutalism hover:shadow-neobrutalism-hover transition-all duration-300 overflow-hidden transform ${reversed ? 'md:translate-x-8' : 'md:-translate-x-8'}`}>
    <!-- Category Badge -->
    <div class={`absolute top-0 ${reversed ? 'md:left-0 lg:left-0' : 'right-0'} p-4 z-20`}>
        <span class={`inline-block px-4 py-2 ${categoryColor} text-white font-bold font-mono text-sm border-2 border-black dark:border-white rounded-lg shadow-[2px_2px_0px_0px_rgba(0,0,0,1)]`}>
            {category}
        </span>
    </div>
    
    <!-- Image/Mockup Area -->
    <div class={`w-full md:w-1/2 ${accentColor} p-8 flex items-center justify-center border-b-[4px] md:border-b-0 ${reversed ? 'md:border-l-[4px]' : 'md:border-r-[4px]'} border-black dark:border-white relative overflow-hidden`}>
        <div class="absolute inset-0 opacity-10" style="background-image: radial-gradient(circle, #000 1px, transparent 1px); background-size: 20px 20px;"></div>
        
        <div class="w-full max-w-sm relative z-10 perspective-1000">
            <!-- Browser Mockup -->
            <div class="browser-mockup relative bg-white dark:bg-gray-900 border-2 border-black dark:border-white rounded-xl shadow-neobrutalism overflow-hidden transform hover:rotate-0 transition-transform duration-500">
                <!-- Browser Header -->
                <div class="bg-gray-100 dark:bg-gray-800 border-b-2 border-black dark:border-white p-2 flex items-center gap-2">
                    <div class={`w-3 h-3 rounded-full ${categoryColor} border border-black dark:border-white`}></div>
                    <div class={`w-3 h-3 rounded-full ${categoryColor} border border-black dark:border-white opacity-60`}></div>
                    <div class={`w-3 h-3 rounded-full ${categoryColor} border border-black dark:border-white opacity-40`}></div>
                    <div class="ml-2 flex-1 bg-white dark:bg-gray-700 border border-black dark:border-gray-500 h-4 rounded text-[8px] flex items-center px-2 font-mono text-gray-500">
                        app.example.com/dashboard
                    </div>
                </div>
                
                <!-- Browser Content -->
                <div class="aspect-video bg-gray-50 dark:bg-gray-800 relative flex items-center justify-center group-hover:scale-105 transition-transform duration-500">
                    <div class="text-center p-4">
                        <span class="material-symbols-outlined text-6xl text-primary/20 dark:text-primary/40 mb-2">
                            web
                        </span>
                        <p class="font-mono text-xs text-primary/60 dark:text-primary/80 font-bold uppercase">
                            Project Preview
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Content Area -->
    <div class="w-full md:w-1/2 p-8 md:p-10 flex flex-col justify-between">
        <div>
            <h3 class="text-3xl font-display font-black mb-4 leading-tight text-gray-900 dark:text-white">
                {title}
            </h3>
            
            <p class="text-gray-700 dark:text-gray-300 font-medium mb-6 leading-relaxed">
                {description}
            </p>
            
            <!-- Tech Stack -->
            <div class="mb-8 p-4 bg-gray-50 dark:bg-gray-800/50 border-2 border-dashed border-gray-300 dark:border-gray-600 rounded-xl">
                <h4 class="font-mono text-xs uppercase text-gray-500 mb-3 tracking-widest font-bold flex items-center gap-2">
                    <span class="material-symbols-outlined text-sm">settings_suggest</span> 
                    Tech Spec
                </h4>
                <div class="flex flex-wrap gap-3">
                    {technologies.map(tech => (
                        <div class="flex items-center gap-2 bg-white dark:bg-gray-700 px-3 py-1.5 rounded-lg border-2 border-black dark:border-gray-500 text-sm font-bold shadow-sm hover:-translate-y-1 transition-transform">
                            <span class={`material-symbols-outlined text-base ${tech.color}`}>{tech.icon}</span> 
                            {tech.name}
                        </div>
                    ))}
                </div>
            </div>
        </div>
        
        <!-- Action Buttons -->
        <div class="flex gap-4 mt-auto">
            <a 
                href="#" 
                class="inline-flex items-center gap-2 bg-black dark:bg-white text-white dark:text-black font-bold py-3 px-6 rounded-xl border-2 border-transparent hover:bg-gray-800 dark:hover:bg-gray-200 transition-colors shadow-neobrutalism hover:shadow-none hover:translate-x-[2px] hover:translate-y-[2px]"
            >
                Ver Arquitectura
                <span class="material-symbols-outlined text-sm">arrow_forward</span>
            </a>
            <a 
                href="#" 
                aria-label="GitHub" 
                class="p-3 border-2 border-black dark:border-white rounded-xl hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors shadow-neobrutalism hover:shadow-none hover:translate-x-[2px] hover:translate-y-[2px]"
            >
                <span class="font-bold font-mono">GH</span>
            </a>
        </div>
    </div>
</div>

<style>
    .browser-mockup {
        transition: transform 0.3s ease;
    }
    .browser-mockup:hover {
        transform: translateY(-5px) rotate(1deg);
    }
</style>
